<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whether_camera"
        android:textSize="@dimen/text_xlarge"
        />

    <RadioGroup
        android:id="@+id/radio_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@android:id/button1"
            android:layout_width="@dimen/size_150"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/yes"
            />

        <RadioButton
            android:id="@android:id/button2"
            android:layout_width="@dimen/size_150"
            android:layout_height="wrap_content"
            android:text="@string/no"
            />
    </RadioGroup>

    <TextView
        android:layout_marginTop="@dimen/size_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_mum"
        android:textSize="@dimen/text_xlarge"
        />

    <RadioGroup
        android:id="@+id/radio_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@android:id/button1"
            android:layout_width="@dimen/size_150"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/single"
            />

        <RadioButton
            android:id="@android:id/button2"
            android:layout_width="@dimen/size_150"
            android:layout_height="wrap_content"
            android:text="@string/other"
            />

        <EditText
            android:id="@+id/input_num"
            android:layout_width="@dimen/size_100"
            android:layout_height="wrap_content"
            android:hint="@string/input_num"
            android:textSize="@dimen/text_large"
            android:inputType="number"
            />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:text="@string/whether_crop"
        android:textSize="@dimen/text_xlarge"
        />

    <RadioGroup
        android:id="@+id/radio_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@android:id/button1"
            android:layout_width="@dimen/size_150"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/yes"
            />

        <RadioButton
            android:id="@android:id/button2"
            android:layout_width="@dimen/size_150"
            android:layout_height="wrap_content"
            android:text="@string/no"
            />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:text="@string/crop_border_shape"
        android:textSize="@dimen/text_xlarge"
        />

    <RadioGroup
        android:id="@+id/radio_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@android:id/button1"
            android:layout_width="@dimen/size_150"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/square"
            />

        <RadioButton
            android:id="@android:id/button2"
            android:layout_width="@dimen/size_150"
            android:layout_height="wrap_content"
            android:text="@string/circle"
            />
    </RadioGroup>

    <Button
        android:id="@+id/btn_go"
        android:layout_marginTop="@dimen/size_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go"
        />
</LinearLayout>